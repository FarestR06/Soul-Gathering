  "authors": [
    "FarestR06"
  ],
  "contact": {
    "homepage": "https://github.com/FarestR06/Soul-Gathering",
    "issues": "https://github.com/FarestR06/Soul-Gathering/issues"
  },
  "license": "LGPL-3.0",
  "icon": "assets/soul_gathering/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "com.farestr06.soul_gathering.client.SoulGatheringClient"
    ],
    "main": [
      "com.farestr06.soul_gathering.SoulGathering"
    ],
    "cardinal-components": [
      "com.farestr06.soul_gathering.component.ModComponents"
    ]
  },
  "mixins": [
    "soul_gathering.mixins.json"
